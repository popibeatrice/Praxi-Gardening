---
import "@fontsource-variable/montserrat";
import "@fontsource/fira-sans/200.css";
import "@fontsource/fira-sans/400.css";
import "@fontsource/fira-sans/700.css";

import "../styles/globals.css";

import Header from "../components/Header.astro";
import MobileHeader from "../components/MobileHeader";
import Logo from "../components/Logo.astro";
import Footer from "../components/Footer.astro";

import { Image } from "astro:assets";
import leafImg from "../assets/frunze.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-montserrat overflow-x-hidden">
    <Image
      src={leafImg}
      class="fixed -bottom-10 -left-10 z-[10] w-48 blur-[2px] min-[325px]:-bottom-8 min-[325px]:-left-8 sm:w-60 lg:w-64 lg:blur-[3px] 2xl:-bottom-6 2xl:-left-6 2xl:w-80"
      alt="Leaf"
    />
    <slot />
    <Header />
    <MobileHeader client:load><Logo /></MobileHeader>
    <Footer />
  </body>
</html>
