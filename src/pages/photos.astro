---
import Gallery from "@/components/Gallery.astro";
import Layout from "../layouts/Layout.astro";
import LongTitle from "@/components/LongTitle.astro";

const images = await Astro.glob("../media/*");
---

<Layout title="BITL Blog | Photos">
  <main
    class="mx-auto flex min-h-screen max-w-6xl flex-col items-center justify-center gap-20 overflow-x-hidden px-4 lg:gap-36 2xl:max-w-7xl"
  >
    <div class="flex flex-col items-center justify-center gap-12 pt-44">
      <LongTitle>Photo Gallery</LongTitle>
      <!-- <h2
        class="text-center font-fira-sans text-4xl font-medium xs:text-5xl sm:text-6xl"
      >
        Photo Gallery
      </h2> -->
      <Gallery allImgs={images} />
    </div>
  </main>
</Layout>
